#!/bin/bash

should_log=true
while true; do
  case "$1" in
    --no-log)
      should_log=false
      shift 1 
      ;;
    "")
      shift 1
      ;;
      *)
      break
      ;;
  esac
done

if [ -z "$1" ]; then
    echo "Must pass an executable program or script"
    exit 0
fi

EXEC_NAME="${1}"
if $should_log; then
  LOG_FILE="/tmp/${EXEC_NAME}.log"
else
  LOG_FILE="/dev/null"
fi

echo "Starting ${EXEC_NAME}..." >> "$LOG_FILE"

nohup "${@}" < /dev/stdin >> $LOG_FILE 2>&1 &

