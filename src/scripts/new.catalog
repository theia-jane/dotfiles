#!/bin/bash

cd ~/catalogs

contents="\
listings:
  - name:
    description: 
    value: 
";

name="${1:-"*untitled-catalog*"}"
emacsdclient-bg -ce '
(let ((buf (generate-new-buffer "'"${name}"'")))
  (switch-to-buffer buf)
  (insert "'"${contents}"'")
  (yaml-mode)
  (goto-line 4)
  (end-of-line)
  )'

