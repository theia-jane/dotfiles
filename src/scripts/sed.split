#!/bin/bash

seperator=","
split_char=$"\n"

while true; do
  case "$1" in
    --seperator | -S)
      seperator="$2"
      shift 2
      ;;
    --split-char)
      split_char="$2"
      shift 2;;
      * | --)
      break
      ;;
  esac
done

sed -r \
  -e 's/([^\])'$seperator'/\1'$split_char'/g' \
  -e 's/\\'$seperator'/'$seperator'/g' \
  $@
