#!/bin/bash

if [ -z "$1" ]; then
  echo "Must pass a pattern" 
  exit 1 
fi

dir="";

while [ "$(pwd)" != "/" ]; do
  if [ ! -z "$(ls -a | egrep "(${1})$")" ]; then
    dir="$(pwd)"
    break
  else
    cd ..
  fi
done

if [ -z "$dir" ]; then
    echo "Root not found"
    exit 1
fi

echo $dir
exit 0
