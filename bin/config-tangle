;; [[file:~/Projects/dotfiles/management-cli.org::*Tangle][Tangle:3]]
(defvar config-root (with-temp-buffer
                      (shell-command "git rev-parse --show-toplevel" (current-buffer))
                      (replace-string "\n" "")
                      (buffer-string)))

(setq org-babel-default-header-args `((:session         . "none")
                                      (:noweb           . "yes")
                                      (:root-dir        . ,config-root)
                                      (:mkdirp          . "yes")
                                      (:tangle-relative . dir)
                                      (:tangle          . "no")
                                      (:comments        . "yes"))
      org-confirm-babel-evaluate nil)
;; Tangle:3 ends here

;; [[file:~/Projects/dotfiles/management-cli.org::*Tangle][Tangle:4]]
(add-hook 'after-save-hook
  'executable-make-buffer-file-executable-if-script-p)
;; Tangle:4 ends here

;; [[file:~/Projects/dotfiles/management-cli.org::*Tangle][Tangle:5]]
(defun config-file-filter (file)
  (string-match
   (rx line-start
       (eval (file-name-as-directory config-root))
       (or "literate/"
           "tools/"
           (and (+ (not "/")) ".org")))
   file))

(defun config-files ()
  (seq-filter
   #'config-file-filter
   (directory-files-recursively config-root "\\.org$")))

(defun config-tangle ()
  (let ((files (config-files)))
    (message "Tangling files: %s" files)
    (ob-with-global-lib
     (ob-lib-from-files files t (lambda (file)
                                  (setq file (string-remove-prefix (file-name-as-directory config-root) file))
                                  (string-remove-suffix ".org" file)))
     (ob-tangle-files files))))

(defun config-tangle ()
  (let ((files (config-files)))
    (message "Tangling files: %s" files)
    (ob-with-global-lib
     (ob-lib-from-files files t (lambda (file)
                                  (setq file (string-remove-prefix (file-name-as-directory config-root) file))
                                  (string-remove-suffix ".org" file)))
     (ob-tangle-files files))))

(config-tangle)

(kill-emacs 0)
;; Tangle:5 ends here
